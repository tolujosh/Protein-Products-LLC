<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_production_form_view_automation" model="ir.ui.view">
        <field name="name">mrp.production.inherited.form.automation</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
        
        <xpath expr="//field[@name='product_id']" position="after">
            <field name="tracking" invisible="1"/>
        </xpath>
        
            <xpath expr="//header" position="inside">
                <field name="is_visible" invisible="1"/>
                    <button name="button_auto_confirmation"
                        attrs="{'invisible': ['|', '|', ('tracking', '!=', 'serial'), ('state', '!=', 'done'),('is_visible', '=', True)]}" string="Generate Productions" 
                        icon="fa-gears"
                        type="object" 
                        class="oe_highlight" 
                        data-hotkey="v"/>
            </xpath>
        </field>
    </record>
</odoo>